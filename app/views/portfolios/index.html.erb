<h1>Portfolio</h1>
<% if current_user %>
<span>Username: <%= current_user.username %><br></span>
<span>Current Cash: $<%= current_user.cash %><br></span>
<span>Total Equity: $<%= @total_equity %><br></span>

<h2>Current Holdings</h2>
<% @stocks.each do |f| %>
  <span><%= "#{f[:symbol]} | Quantity: #{f[:quantity]} | Equity: $#{f[:equity]}" %><br></span>
<% end %>

<h2>Leaderboard</h2>
<% @leaderboard.each_with_index do |o, index| %>
<span><%= "#{index+1} | #{o[0]} | #{o[1]}" %><br></span>
<% end %>

<h2>Trade History</h2>
<% @trades.each do |f| %>
  <span><%= "#{f[:date]} | #{f[:symbol]} | Quantity: #{f[:quantity]} | Price/share: $#{f[:price]}" %><br></span>
<% end %>
<% else %>
<p>Please sign in.</p>
<% end %>
